<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Project</title>
  <!-- Bootstrap CSS -->
  <link rel="stylesheet" href="/assets/css/style.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>
<body>
  <nav class="navbar navbar-expand-lg navbar-light bg-primary">
    <div class="container">
      <!-- Logo -->
      <a class="navbar-brand" href="#">
        <img src="https://dumbways.id/assets/images/brandred.png" alt="Logo" class="img-fluid" style="height: 30px;">
      </a>

      <!-- burger -->
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <!-- Navbar items -->
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
          <li class="nav-item">
            <a class="nav-link text-white fw-bold" aria-current="page" href="/">Home</a>
          </li>
          <li class="nav-item">
            <a class="nav-link text-white fw-bold" href="/project">My Project</a>
          </li>
          <li class="nav-item">
            <a class="nav-link text-white fw-bold active" href="/testimonial">Testimonial</a>
          </li>
        </ul>

        <!-- tombol kanan -->
        <ul class="navbar-nav ml-auto">
        {{#if user}} 
          
          <li class="nav-item"></li>
            <span class="nav-link text-white">Welcome, {{user.name}}</span>
          </li>
          <li class="nav-item">
            <a class="nav-link text-white fw-bold" href="/contact">Contact</a>
          </li>
          
          <li class="nav-item">
            <a class="btn btn-danger fw-bold" href="/logout">Logout</a>
          </li>
        {{else}} 
          <!-- If not logged in, show Register and Login buttons -->
          <li class="nav-item">
            <a class="btn btn-outline-light fw-bold me-2" href="/register">Register</a>
          </li>
          <li class="nav-item">
            <a class="btn btn-light fw-bold" href="/login">Login</a>
          </li>
        {{/if}}
      </ul>
        </form>
      </div>
    </div>
  </nav>

  <!-- Outer Section for Testimonials -->
  <h3 class="text-center mt-5 text-shadow"> Testimonial</h3>
  <div class="d-flex justify-content-center mt-2">
    <button class="btn btn-outline-primary mx-1" onclick="allTestimonial()"><i class="fas fa-star"></i> All</button>
    <button class="btn btn-outline-primary mx-1" onclick="filterTestimonial(1)"><i class="fas fa-star"></i> 1</button>
    <button class="btn btn-outline-primary mx-1" onclick="filterTestimonial(2)"><i class="fas fa-star"></i> 2</button>
    <button class="btn btn-outline-primary mx-1" onclick="filterTestimonial(3)"><i class="fas fa-star"></i> 3</button>
    <button class="btn btn-outline-primary mx-1" onclick="filterTestimonial(4)"><i class="fas fa-star"></i> 4</button>
    <button class="btn btn-outline-primary mx-1" onclick="filterTestimonial(5)"><i class="fas fa-star"></i> 5</button>
  </div>

  <!-- Testimonials Container -->
  <div id="testimonials" class="container my-3 d-flex flex-wrap gap-3 ">
    <!-- Testimonial cards will be inserted here -->
  </div>

  <script src="/assets/js/ajax.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
